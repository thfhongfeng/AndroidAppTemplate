<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="MvvmTravelNoteDayItemBinding">

        <variable
            name="travelNoteDayDetail"
            type="com.pine.mvvm.bean.MvvmTravelNoteDetailEntity.DaysBean"></variable>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f8f8f8"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:id="@+id/day_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:text="@{travelNoteDayDetail.day}"
            android:textColor="#992328"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{travelNoteDayDetail.content}"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</layout>