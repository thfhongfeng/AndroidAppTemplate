<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="MvvmProductReleaseActivityBinding">

        <import type="android.text.TextUtils"></import>

        <variable
            name="presenter"
            type="com.pine.mvvm.ui.activity.MvvmProductReleaseActivity.Presenter"></variable>

        <variable
            name="productDetail"
            type="com.pine.mvvm.bean.MvvmProductDetailEntity"></variable>
    </data>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/dp_10">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:shrinkColumns="1">

                    <TableRow android:layout_margin="@dimen/dp_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="@string/mvvm_product_release_name_label"
                            android:textColor="#989898"
                            android:textSize="@dimen/sp_15" />

                        <EditText
                            android:id="@+id/name_et"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/base_shape_round_f3f3f3"
                            android:ellipsize="end"
                            android:maxLength="20"
                            android:maxLines="2"
                            android:padding="@dimen/dp_10"
                            android:text="@={productDetail.name}"
                            android:textColor="#929292"
                            android:textSize="@dimen/sp_15" />
                    </TableRow>

                    <TableRow android:layout_margin="@dimen/dp_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="@string/mvvm_product_release_price_label"
                            android:textColor="#989898"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/price_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/base_shape_round_f3f3f3"
                            android:maxLines="1"
                            android:onClick="@{presenter::onPriceTvClick}"
                            android:padding="@dimen/dp_10"
                            android:text="@={productDetail.price}"
                            android:textColor="#929292"
                            android:textSize="@dimen/sp_15" />
                    </TableRow>

                    <TableRow android:layout_margin="@dimen/dp_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="@string/mvvm_product_release_shelve_price_label"
                            android:textColor="#989898"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/shelve_price_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/base_shape_round_f3f3f3"
                            android:maxLines="1"
                            android:onClick="@{presenter::onShelvePriceTvClick}"
                            android:padding="@dimen/dp_10"
                            android:text="@={productDetail.shelvePrice}"
                            android:textColor="#929292"
                            android:textSize="@dimen/sp_15" />
                    </TableRow>

                    <TableRow android:layout_margin="@dimen/dp_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="@string/mvvm_product_release_shelve_date_label"
                            android:textColor="#989898"
                            android:textSize="@dimen/sp_15" />

                        <LinearLayout
                            android:id="@+id/shelve_date_ll"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/base_shape_round_f3f3f3"
                            android:gravity="center_vertical"
                            android:onClick="@{presenter::onShelveDateSelectorClick}"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/shelve_date_tv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/dp_10"
                                android:text="@={productDetail.shelveDate}"
                                android:textColor="#929292"
                                android:textSize="@dimen/sp_15" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_10"
                                android:padding="@dimen/dp_5"
                                android:src="@mipmap/base_ic_date_select" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow android:layout_margin="@dimen/dp_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="top"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="@string/mvvm_product_release_description_label"
                            android:textColor="#989898"
                            android:textSize="@dimen/sp_15" />

                        <EditText
                            android:id="@+id/description_et"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/base_shape_round_f3f3f3"
                            android:gravity="top"
                            android:lines="3"
                            android:padding="@dimen/dp_10"
                            android:text="@={productDetail.description}"
                            android:textColor="#929292"
                            android:textSize="@dimen/sp_15" />
                    </TableRow>

                    <TableRow android:layout_margin="@dimen/dp_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="top"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="@string/mvvm_product_release_remark_label"
                            android:textColor="#989898"
                            android:textSize="@dimen/sp_15" />

                        <EditText
                            android:id="@+id/remark_et"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/base_shape_round_f3f3f3"
                            android:gravity="top"
                            android:lines="3"
                            android:padding="@dimen/dp_10"
                            android:text="@={productDetail.remark}"
                            android:textColor="#929292"
                            android:textSize="@dimen/sp_15" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</layout>