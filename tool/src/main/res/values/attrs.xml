<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ThousandthNumberTextView">
        <attr name="textView_decimalNum" format="integer"></attr>
        <attr name="textView_decimalAllow" format="boolean"></attr>
        <attr name="textView_spaceChar" format="string"></attr>
        <attr name="textView_numberMaxLength" format="integer"></attr>
    </declare-styleable>

    <declare-styleable name="ThousandthNumberEditText">
        <attr name="editText_decimalNum" format="integer"></attr>
        <attr name="editText_decimalAllow" format="boolean"></attr>
        <attr name="editText_spaceChar" format="string"></attr>
        <attr name="editText_numberMaxLength" format="integer"></attr>
    </declare-styleable>

    <declare-styleable name="RingScaleDiagramView">
        <attr name="innerRadius" format="dimension"></attr>
        <attr name="outerRadius" format="dimension"></attr>
        <attr name="ringBackgroundColor" format="color"></attr>
        <attr name="foldFirstLineLength" format="dimension"></attr>
        <attr name="foldLineWidth" format="dimension"></attr>
        <attr name="startAngle" format="integer"></attr>
        <attr name="nameTextColor" format="color"></attr>
        <attr name="nameTextSize" format="dimension"></attr>
        <attr name="scaleTextColor" format="color"></attr>
        <attr name="scaleTextSize" format="dimension"></attr>
        <attr name="isTwoTextLine" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="ViewPagerTabLayout">
        <attr name="tabLayout_divider" format="reference" />
        <attr name="tabLayout_showDividers">
            <flag name="none" value="0" />
            <flag name="beginning" value="1" />
            <flag name="middle" value="2" />
            <flag name="end" value="4" />
        </attr>
        <attr name="tabLayout_margin" format="dimension" />
        <attr name="tabLayout_marginLeft" format="dimension" />
        <attr name="tabLayout_marginTop" format="dimension" />
        <attr name="tabLayout_marginRight" format="dimension" />
        <attr name="tabLayout_marginBottom" format="dimension" />
        <attr name="tabLayout_marginStart" format="dimension" />
        <attr name="tabLayout_marginEnd" format="dimension" />
        <attr name="tabLayout_bottomDivider" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>
</resources>