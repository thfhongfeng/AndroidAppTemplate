<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mid_gray_black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:textColor">@color/base_selector_text_view</item>
        <item name="android:textColorSecondary">@color/base_selector_text_view_secondary</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="colorAccent">@color/red</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseAppTheme" parent="BaseTheme"></style>

    <style name="BaseActivityTheme" parent="BaseTheme"></style>

    <style name="BaseFullActivityTheme" parent="BaseTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BaseLoadingTheme" parent="BaseTheme">
        <!--  这三行是重点  -->
        <!--    设置背景，解决白屏的关键    -->
        <item name="android:windowBackground">@drawable/base_iv_app_loading</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
