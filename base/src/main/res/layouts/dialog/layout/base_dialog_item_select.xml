<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="@dimen/dp_240"
    android:layout_height="@dimen/dp_192"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_shape_round_f3f3f3"
        android:divider="#00000000"
        android:dividerHeight="0dp"></ListView>

    <TextView
        android:id="@+id/cancel_btn_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/base_shape_round_white"
        android:gravity="center"
        android:padding="@dimen/dp_15"
        android:text="@string/base_cancel"
        android:textColor="#3B99FC"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />

</LinearLayout>