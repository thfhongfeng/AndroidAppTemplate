<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/base_shape_round_white"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.pine.template.base.widget.view.BilingualTextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:gravity="center"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                app:base_textColor="#00000b"
                app:base_textSize="@dimen/sp_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center_vertical"
                android:minHeight="@dimen/dp_88"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/input_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#eeeeee"
                    android:gravity="start"
                    android:hint="@string/base_input_hint"
                    android:maxLines="20"
                    android:minHeight="@dimen/dp_88"
                    android:padding="@dimen/dp_10"
                    android:singleLine="false"
                    android:textColor="#333333"
                    android:textColorHint="#969ca6"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/input_end_iv"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:layout_margin="@dimen/dp_5"
                    android:src="@drawable/base_selector_ic_pwd_hide_show"
                    android:visibility="gone"></ImageView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#dbdbdb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.pine.template.base.widget.view.BilingualTextView
                    android:id="@+id/cancel_btn_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    app:base_text="@string/base_cancel"
                    app:base_textColor="#007aff"
                    app:base_textSize="@dimen/sp_15" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="#dbdbdb" />

                <com.pine.template.base.widget.view.BilingualTextView
                    android:id="@+id/clear_btn_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    app:base_text="@string/base_clear"
                    app:base_textColor="#007aff"
                    app:base_textSize="@dimen/sp_15" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="#dbdbdb" />

                <com.pine.template.base.widget.view.BilingualTextView
                    android:id="@+id/submit_btn_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    app:base_text="@string/base_submit"
                    app:base_textColor="#007aff"
                    app:base_textSize="@dimen/sp_15" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>