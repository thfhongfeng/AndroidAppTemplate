<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_label_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:text="@string/demo_home_title"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/demo_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/dp_20"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <com.pine.base.component.novice_guide.NoviceGuideView
        android:id="@+id/novice_guide_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.pine.base.component.novice_guide.NoviceGuideView>
</FrameLayout>