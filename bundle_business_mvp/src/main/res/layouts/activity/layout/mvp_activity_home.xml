<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/dp_30"
        android:text="Business Mvp Home" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10">

        <com.pine.tool.widget.view.ViewPagerTabLayout
            android:id="@+id/view_pager_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:tabIndicatorColor="@color/dark_red"
            app:tabIndicatorHeight="@dimen/dp_2"
            app:tabSelectedTextColor="@color/dark_red"
            app:tabTextColor="@color/dim_gray"
            app:vptl_bottomDivider="@drawable/res_shape_dv_light_gray"
            app:vptl_divider="@drawable/res_inset_dv_light_gray"
            app:vptl_marginEnd="@dimen/dp_10"
            app:vptl_marginStart="@dimen/dp_10"
            app:vptl_showDividers="middle"></com.pine.tool.widget.view.ViewPagerTabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></androidx.viewpager.widget.ViewPager>
    </LinearLayout>

</LinearLayout>
